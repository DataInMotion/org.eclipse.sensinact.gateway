<resourceInfos xmlns="http://org.eclipse.sensinact/resource" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://org.eclipse.sensinact/resource ../../../../../../sensinact-generic/src/main/resources/sensinact-resource.xsd"
empty_profile="true">

    <resourceInfo xsi:type="resourceInfoProperty" name="CONNECTED" target="admin">
        <policy name="PROPERTY" update="NONE"/>
        <identifier xsi:type="stringContent">connected</identifier>
	    <attributes>
	     	<attribute name="value" type="boolean"/>
	    </attributes>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoSensor" name="TEMP" target="test">
        <policy name="SENSOR" update="NONE"/>
        <identifier xsi:type="stringContent">temp</identifier>
	    <attributes>
	     	<attribute name="value" type="double"/>
	    </attributes>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoSensor" name="BUTTON" target="gui">
        <policy name="SENSOR" update="AUTO"/>
        <identifier xsi:type="stringContent">button</identifier>
	    <attributes>
	     	<attribute name="value" type="boolean"/>
	    </attributes>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoAction" name="TURN_RED" target="gui">
        <policy name="ACTION" update="AUTO"/>
        <identifier xsi:type="stringContent">turn_red</identifier>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoAction" name="TURN_BLUE" target="gui">
        <policy name="ACTION" update="AUTO"/>
        <identifier xsi:type="stringContent">turn_blue</identifier>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoAction" name="TURN_GREEN" target="gui">
        <policy name="ACTION" update="AUTO"/>
        <identifier xsi:type="stringContent">turn_green</identifier>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoSensor" name="ACCELEROMETER" target="spatialisation">
        <policy name="SENSOR" update="AUTO"/>
        <identifier xsi:type="stringContent">accelerometer</identifier>
	    <attributes>
	     	<attribute name="value" type="float"/>
	    </attributes>
    </resourceInfo>
</resourceInfos>
