<resourceInfos xmlns="http://org.eclipse.sensinact/resource" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://org.eclipse.sensinact/resource ../../../../../sensinact-generic/src/main/resources/sensinact-resource.xsd"
  empty_profile="true">

    <resourceInfo xsi:type="resourceInfoSensor" name="SIGNAL" policy="SENSOR" target="admin" >
        <identifier xsi:type="stringContent">7</identifier>
        <attributes>
        	<attribute name="value" type="int">
        		<metadata>
			        <meta name="Unit" type="string">
			            <value>DBM</value>
			        </meta>
        		</metadata>
        	</attribute>
        </attributes>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoVariable" name="POWER" policy="STATE_VARIABLE"  target="power">
        <identifier xsi:type="stringContent">powerState</identifier>
        <attributes>
        	<attribute name="value" type="boolean"/>
        </attributes>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoAction" name="TURN_ON" policy="ACTION" target="power">
        <identifier xsi:type="stringContent">on</identifier>
        <methods>
        	<method type="ACT"/>
        </methods>
    </resourceInfo>

    <resourceInfo xsi:type="resourceInfoAction" name="TURN_OFF" policy="ACTION" target="power">
        <identifier xsi:type="stringContent">off</identifier>
        <methods>
        	<method type="ACT"/>
        </methods>
    </resourceInfo>


</resourceInfos>
